<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1e1e1e;" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.move_arm.SettingsController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="20.0" prefWidth="300.0" 
          style="-fx-background-color: rgba(40, 40, 40, 1); -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 0);">
        
        <Label text="Настройки" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />

        <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #555; -fx-border-radius: 5; -fx-padding: 15;">
            <Label text="Размер целей (Радиус)" style="-fx-text-fill: #ccc; -fx-font-size: 16px;" />
            
            <Slider fx:id="radiusSlider" min="10" max="100" showTickLabels="true" showTickMarks="true" />
            
            <Label fx:id="radiusValueLabel" text="0 px" style="-fx-text-fill: #fff; -fx-font-weight: bold;" />
        </VBox>

        <Button text="Сохранить и выйти" onAction="#handleSaveAndExit" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-cursor: hand;"/>
    </VBox>

    <StackPane alignment="CENTER" prefWidth="400.0" prefHeight="400.0" style="-fx-border-color: #333; -fx-border-style: dashed; -fx-border-radius: 10;">
        <Label text="Предпросмотр" style="-fx-text-fill: #444;" StackPane.alignment="TOP_CENTER" />
        
        <Circle fx:id="previewCircle" fill="#ff5555" stroke="WHITE" strokeWidth="2" visible="false" />
    </StackPane>

</HBox>