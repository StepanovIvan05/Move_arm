<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.move_arm.SettingsController"
           stylesheets="@css/dark-glow.css">

    <HBox alignment="CENTER" spacing="36">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <!-- ЛЕВАЯ ПАНЕЛЬ -->
        <VBox alignment="CENTER"
              spacing="20"
              prefWidth="320"
              styleClass="dark-panel">

            <Label text="Настройки" styleClass="title-label"/>

            <!-- Радиус -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Размер цели" styleClass="subtitle-label"/>

                <Slider fx:id="radiusSlider"
                        min="20" max="100"
                        majorTickUnit="10"
                        minorTickCount="0"
                        snapToTicks="true"
                        showTickLabels="true"/>

                <Label fx:id="radiusValueLabel"/>
            </VBox>

            <!-- Анимация -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Анимация" styleClass="subtitle-label"/>
                <ComboBox fx:id="animationTypeComboBox" prefWidth="220"/>
                <Button text="▶ Просмотреть"
                        onAction="#handlePlayAnimation"/>
            </VBox>

            <Button text="Сохранить и выйти"
                    onAction="#handleSaveAndExit"/>

        </VBox>

        <!-- PREVIEW -->
        <Pane fx:id="previewRoot"
              prefWidth="420"
              prefHeight="420"
              styleClass="preview-box">

            <Circle fx:id="previewCircle"
                    fill="#ff5555"
                    stroke="white"
                    strokeWidth="2"/>
        </Pane>

    </HBox>
</StackPane>
