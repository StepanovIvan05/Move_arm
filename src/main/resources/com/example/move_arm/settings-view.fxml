<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.move_arm.SettingsController"
      stylesheets="@css/dark-glow.css"
      alignment="CENTER" spacing="20">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <VBox alignment="CENTER" spacing="20" prefWidth="300"
          styleClass="dark-panel">

        <Label text="Настройки" styleClass="title-label"/>

        <VBox alignment="CENTER" spacing="10"
              styleClass="dark-panel">

            <Label text="Размер целей (Радиус)" styleClass="subtitle-label"/>

            <Slider fx:id="radiusSlider" min="10" max="100"
                    showTickLabels="true" showTickMarks="true"/>

            <Label fx:id="radiusValueLabel"/>

        </VBox>

        <!-- НОВЫЙ БЛОК: Выбор анимации -->
        <VBox alignment="CENTER" spacing="10"
              styleClass="dark-panel">

            <Label text="Тип анимации" styleClass="subtitle-label"/>

            <ComboBox fx:id="animationTypeComboBox" prefWidth="200"/>

        </VBox>

        <Button text="Сохранить и выйти"
                onAction="#handleSaveAndExit"
                styleClass="accent-button"/>

    </VBox>

    <StackPane alignment="CENTER" prefWidth="400" prefHeight="400" styleClass="preview-box">

        <Label text="Предпросмотр" styleClass="subtitle-label" StackPane.alignment="TOP_CENTER"/>

        <Circle fx:id="previewCircle" fill="#ff5555" stroke="WHITE" strokeWidth="2" visible="false"/>

    </StackPane>

</HBox>