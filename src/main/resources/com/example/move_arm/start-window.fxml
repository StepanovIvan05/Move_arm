<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.move_arm.StartWindowController"
            stylesheets="@css/dark-glow.css">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Button fx:id="exitButton"
                    text="Выйти"
                    styleClass="flat-danger-button"/>
        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox alignment="CENTER" spacing="28">

            <!-- Title -->
            <VBox alignment="CENTER" spacing="6">
                <Label text="Move Arm" styleClass="title-label"/>
                <Label text="Реабилитационная игра"
                       styleClass="caption-label"/>
            </VBox>

            <!-- Login / Register Card -->
            <VBox spacing="14"
                  alignment="CENTER"
                  maxWidth="360"
                  styleClass="panel-card">

                <Label fx:id="formTitle"
                       text="Вход"
                       styleClass="subtitle-label"/>

                <TextField fx:id="usernameField"
                           promptText="Имя пользователя"
                           maxWidth="260"/>

                <Button fx:id="actionButton"
                        text="Войти"
                        maxWidth="260"
                        styleClass="accent-button"/>

                <Hyperlink fx:id="switchModeLink"
                           text="Нет аккаунта? Регистрация"/>
            </VBox>

            <!-- Message -->
            <Label fx:id="messageLabel"
                   styleClass="message-label"/>

            <!-- Guest -->
            <Button fx:id="playGuestButton"
                    text="Играть как гость"
                    styleClass="ghost-button"
                    maxWidth="220"/>

            <!-- Users list (secondary) -->
            <TitledPane text="Другие пользователи"
                        expanded="false"
                        maxWidth="360">
                <VBox spacing="8">
                    <padding>
                        <Insets top="8" right="8" bottom="8" left="8"/>
                    </padding>

                    <ListView fx:id="usersListView" prefHeight="100"/>

                    <Button fx:id="deleteUserButton"
                            text="Удалить выбранного"
                            styleClass="danger-outline-button"
                            maxWidth="200"/>
                </VBox>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
