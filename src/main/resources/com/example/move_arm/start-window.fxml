<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.move_arm.StartWindowController"
           fx:id="rootPane"
           style="-fx-background-color: #1e1e1e;;">

    <VBox spacing="20" alignment="CENTER">
        <Label text="Move Arm"
               style="-fx-text-fill: #ecf0f1; -fx-font-size: 36px; -fx-font-weight: bold;"/>

        <Button text="Начать"
                fx:id="startButton"
                onAction="#handleStartButton"
                style="-fx-background-color: #222; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-color: #FFF; -fx-border-radius: 5;"
                prefWidth="150"
                prefHeight="50"/>
    </VBox>

</StackPane>
