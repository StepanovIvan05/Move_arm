<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.move_arm.StartWindowController"
           stylesheets="@css/dark-glow.css">

    <VBox spacing="20" alignment="CENTER">

        <Label text="Move Arm" styleClass="title-label"/>

        <Button text="Начать"
                fx:id="startButton"
                onAction="#handleStartButton"
                prefWidth="150"
                prefHeight="50"/>

    </VBox>

</StackPane>
