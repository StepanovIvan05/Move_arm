<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.move_arm.StartWindowController"
            stylesheets="@css/dark-glow.css">

    <children>
        <VBox spacing="20" alignment="CENTER"
              AnchorPane.topAnchor="40" AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="40">

            <Label text="Move Arm" styleClass="title-label"/>

            <VBox spacing="8" alignment="CENTER">
                <Label text="Войдите или зарегистрируйтесь" styleClass="subtitle-label"/>
                <HBox spacing="8" alignment="CENTER">
                    <TextField fx:id="usernameField" promptText="Имя пользователя" prefWidth="240"/>
                    <Button fx:id="loginButton" text="Войти"/>
                    <Button fx:id="registerButton" text="Регистрация"/>
                </HBox>
            </VBox>

            <HBox spacing="16" alignment="CENTER">
                <Button fx:id="playGuestButton" text="Играть как guest" styleClass="accent-button" />
                <Button fx:id="deleteUserButton" text="Удалить выбранного (dev)" />
            </HBox>

            <Label fx:id="messageLabel" text="" />

            <Separator prefWidth="600"/>

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Пользователи (сейчас лишь guest по умолчанию)" styleClass="subtitle-label"/>
                <ListView fx:id="usersListView" prefHeight="80" prefWidth="600"/>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
