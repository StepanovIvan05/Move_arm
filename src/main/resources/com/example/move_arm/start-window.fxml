<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.move_arm.StartWindowController"
            stylesheets="@css/dark-glow.css">

    <children>

        <!-- Кнопка выхода из игры -->
        <Button text="Выйти"
                fx:id="exitButton"
                AnchorPane.topAnchor="10"
                AnchorPane.rightAnchor="10"
                styleClass="danger-button"/>

        <!-- Центрированная область -->
        <VBox spacing="20" alignment="CENTER"
              prefWidth="600"
              AnchorPane.topAnchor="40"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <Label text="Move Arm" styleClass="title-label"/>

            <!-- Карточка входа -->
            <VBox spacing="12" alignment="CENTER"
                  styleClass="panel-card" maxWidth="420">
                <Label fx:id="formTitle" text="Вход" styleClass="subtitle-label"/>

                <TextField fx:id="usernameField"
                           promptText="Имя пользователя"
                           prefWidth="260"/>

                <Button fx:id="actionButton" text="Войти" styleClass="accent-button"/>

                <Hyperlink fx:id="switchModeLink" text="Нет аккаунта? Регистрация"/>
            </VBox>

            <!-- Сообщения -->
            <Label fx:id="messageLabel" text=""/>

            <!-- Кнопка гостя -->
            <Button fx:id="playGuestButton"
                    text="Играть как гость"
                    styleClass="secondary-button"
                    maxWidth="220"/>

            <!-- Список пользователей -->
            <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="420">
                <Label text="Пользователи:" styleClass="subtitle-label"/>
                <ListView fx:id="usersListView" prefHeight="100"/>
                <Button fx:id="deleteUserButton" text="Удалить выбранного" maxWidth="180"/>
            </VBox>

        </VBox>

    </children>
</AnchorPane>
