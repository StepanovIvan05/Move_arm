<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.move_arm.SelectionController"
            stylesheets="@css/dark-glow.css">

    <children>

        <VBox alignment="CENTER"
              spacing="32"
              AnchorPane.topAnchor="40"
              AnchorPane.bottomAnchor="40"
              AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40">

            <!-- Заголовок -->
            <Label text="Выберите режим игры"
                   styleClass="title-label"/>

            <!-- Карточки выбора игры -->
            <HBox spacing="28"
                  alignment="CENTER">

                <!-- Hover -->
                <VBox spacing="12"
                      alignment="CENTER"
                      prefWidth="260"
                      styleClass="panel-card">

                    <Label text="Hover"
                           styleClass="subtitle-label"/>

                    <Label text="Наведение курсора на появляющиеся цели"
                           wrapText="true"
                           maxWidth="220"
                           styleClass="caption-label"/>

                    <Button fx:id="hoverButton"
                            text="Начать"
                            prefWidth="140"
                            styleClass="accent-button"/>
                </VBox>

                <!-- Hold -->
                <VBox spacing="12"
                      alignment="CENTER"
                      prefWidth="260"
                      styleClass="panel-card">

                    <Label text="Hold"
                           styleClass="subtitle-label"/>

                    <Label text="Удерживайте курсор на цели заданное время"
                           wrapText="true"
                           maxWidth="220"
                           styleClass="caption-label"/>

                    <Button fx:id="holdButton"
                            text="Начать"
                            prefWidth="140"
                            styleClass="accent-button"/>
                </VBox>

            </HBox>

            <!-- Разделитель -->
            <Region prefHeight="20"/>

            <!-- Служебные действия -->
            <HBox spacing="16"
                  alignment="CENTER">

                <Button fx:id="logoutButton"
                        text="Сменить пользователя"
                        styleClass="secondary-button"
                        prefWidth="200"/>

                <Button fx:id="exitButton"
                        text="Выйти из игры"
                        styleClass="danger-button"
                        prefWidth="160"/>
            </HBox>

        </VBox>

    </children>
</AnchorPane>
