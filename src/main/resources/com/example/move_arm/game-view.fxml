<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?> <!-- Импортируем Button -->

<BorderPane fx:id="mainBorderPane"
            xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.move_arm.GameController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Верхняя панель для счёта -->
    <top>
        <HBox fx:id="topPanel" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-color: linear-gradient(to bottom, #333, #222);">
            <!-- Счётчик будет добавлен программно в topPanel -->
        </HBox>
    </top>

    <!-- Центральная панель для игрового поля -->
    <center>
        <Pane fx:id="gameRoot" style="-fx-background-color: #1e1e1e;" />
    </center>

    <!-- Нижняя панель для кнопок -->
    <bottom>
        <HBox fx:id="bottomPanel" alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: linear-gradient(to bottom, #222, #111);">
            <!-- Пример кнопок (их обработчики нужно будет реализовать отдельно или убрать) -->
            <Button text="Новая игра" style='-fx-background-color: #222; -fx-border-color: #fff; -fx-border-radius: 5; -fx-text-fill: #fff;'/>
            <Button text="Пауза" style='-fx-background-color: #222; -fx-border-color: #fff; -fx-border-radius: 5; -fx-text-fill: #fff;'/>
            <Button text="Выход" style='-fx-background-color: #222; -fx-border-color: #fff; -fx-border-radius: 5; -fx-text-fill: #fff;'/>
        </HBox>
    </bottom>

</BorderPane>