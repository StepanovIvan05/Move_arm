<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.move_arm.MenuController"
            stylesheets="@css/dark-glow.css">

    <children>

        <VBox alignment="CENTER"
              spacing="36"
              AnchorPane.topAnchor="40"
              AnchorPane.bottomAnchor="40"
              AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40">

            <!-- Заголовок -->
            <Label text="Меню игры"
                   styleClass="title-label"/>

            <!-- Основные действия -->
            <VBox spacing="16"
                  alignment="CENTER"
                  styleClass="panel-card"
                  maxWidth="320">

                <Button fx:id="startButton"
                        text="Начать игру"
                        prefWidth="260"
                        styleClass="accent-button"/>

                <Button fx:id="settingsButton"
                        text="Настройки игры"
                        prefWidth="260"/>

                <Button fx:id="statsButton"
                        text="Статистика"
                        prefWidth="260"/>

            </VBox>

            <!-- Вторичные действия -->
            <VBox spacing="12"
                  alignment="CENTER">

                <Button fx:id="selectGameButton"
                        text="К выбору игры"
                        prefWidth="220"
                        styleClass="secondary-button"/>

                <Button fx:id="exitButton"
                        text="Выйти из игры"
                        prefWidth="220"
                        styleClass="danger-button"/>

            </VBox>

        </VBox>

    </children>
</AnchorPane>
