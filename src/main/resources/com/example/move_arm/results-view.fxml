<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.move_arm.ResultsController"
           stylesheets="@css/dark-glow.css">

    <VBox spacing="25" alignment="CENTER">

        <LineChart fx:id="scoreChart" prefWidth="800" prefHeight="400">
            <xAxis><NumberAxis label="Время (сек)"/></xAxis>
            <yAxis><NumberAxis label="Очки"/></yAxis>
        </LineChart>

        <GridPane fx:id="statsGrid"
                  hgap="20" vgap="10"/>

        <HBox spacing="20" alignment="CENTER">

            <Button text="Рестарт" fx:id="startButton" onAction="#handleRestartButton"/>
            <Button text="В меню" fx:id="toMenu" onAction="#handleToMenuButton"/>
            <Button text="Больше статистики" fx:id="toMoreResults" onAction="#handleToMoreResultsButton"/>

        </HBox>

    </VBox>

</StackPane>
